<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android">

    <com.daimajia.swipe.SwipeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/swipe">

        <LinearLayout
            android:tag="Bottom"
            android:id="@+id/llSwipe"
            android:layout_width="@dimen/size_image_60"
            android:weightSum="1"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginBottom="4dp"
            android:layout_height="match_parent">


            <com.ids.librascan.custom.CustomTextViewMedium
                android:id="@+id/tVDelete"
                android:text="@string/delete"
                android:tag="delete"
                android:textColor="@color/white"
                android:background="@color/red"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:weightSum="3"
            android:id="@+id/llItem"
            android:clickable="true"
            android:focusable="true"
            android:paddingBottom="@dimen/small_margin_padding"
            android:background="?android:attr/selectableItemBackground"
            android:layout_width="match_parent"
            android:minHeight="@dimen/min_height"
            android:layout_height="wrap_content">


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:background="@color/white"
                android:layout_height="match_parent">


                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="3">


                    <com.ids.librascan.custom.CustomTextViewBold
                            android:id="@+id/tvNameSession"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:maxLines="2"
                            android:layout_weight="1"
                            android:layout_margin="2dp"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:padding="@dimen/normal_margin_padding"
                            android:textColor="@color/colorAccent"
                            android:textSize="@dimen/small_font" />

                    <com.ids.librascan.custom.CustomTextViewMedium
                        android:id="@+id/tvWarehouses"
                        android:padding="@dimen/normal_margin_padding"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_margin="2dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/small_font"/>

                    <com.ids.librascan.custom.CustomTextViewMedium
                        android:id="@+id/tvDate"
                        android:padding="@dimen/normal_margin_padding"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_margin="2dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/small_font"/>

                    </LinearLayout>



                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_marginEnd="5dp"
                    android:gravity="end"
                    android:layout_weight="1">
                    <LinearLayout
                        android:id="@+id/llSync"
                        android:layout_width="@dimen/size_image_60"
                        android:layout_gravity="center"
                        android:layout_height="@dimen/size_30"
                        android:visibility="gone"
                        android:focusable="true"
                        android:clickable="true"
                        android:layout_marginStart="@dimen/small_margin"
                        android:layout_marginEnd="@dimen/small_margin"
                        android:background="@drawable/rounded_primary_layout"
                        android:gravity="center">


                        <com.ids.librascan.custom.CustomTextViewBold
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:text="@string/sync"
                            android:gravity="center"
                            android:background="?android:attr/selectableItemBackground"
                            android:textColor="@color/white"
                            android:textSize="@dimen/size_14"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llScan"
                        android:layout_width="@dimen/size_image_60"
                        android:layout_gravity="center"
                        android:layout_height="@dimen/size_30"
                        android:focusable="true"
                        android:clickable="true"
                        android:background="@drawable/rounded_primary_layout"
                        android:gravity="center">


                        <com.ids.librascan.custom.CustomTextViewBold
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:gravity="center"
                            android:text="@string/scan"
                            android:background="?android:attr/selectableItemBackground"
                            android:textColor="@color/white"
                            android:textSize="@dimen/size_14"/>

                    </LinearLayout>


                </LinearLayout>



        </LinearLayout>

        </LinearLayout>
    </com.daimajia.swipe.SwipeLayout>
</layout>