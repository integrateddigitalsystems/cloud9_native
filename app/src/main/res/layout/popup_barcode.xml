<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<FrameLayout
    android:id="@+id/llPagerItem"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    android:gravity="center"
    android:orientation="vertical">


    <Button
            android:layout_width="@dimen/button_height"
            android:layout_height="@dimen/button_height"
            android:text="x"
            android:textStyle="bold"
            android:textSize="@dimen/header_font"
            android:textColor="@color/white"
            android:id="@+id/btClose"
            android:scaleType="centerInside"
            android:layout_gravity="top|end"
            android:background="@drawable/green_circle"/>


    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        <androidx.cardview.widget.CardView
                android:layout_gravity="center"
                app:cardUseCompatPadding="true"
                app:cardElevation="@dimen/app_elevation"
                android:layout_margin="@dimen/big_margin_padding"
                app:cardCornerRadius="@dimen/button_radius"
                app:cardBackgroundColor="@color/card_bg"
                app:cardPreventCornerOverlap="false"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="match_parent">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="0dp"
                        android:layout_weight="1">

                    <ImageView
                            android:id="@+id/ivBarcode"
                            android:layout_marginTop="@dimen/huge_margin"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/scan"
                            android:layout_width="@dimen/barcode_width_height"
                            android:layout_height="@dimen/barcode_width_height"/>

                    <TextView
                            android:id="@+id/tvTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:gravity="center_horizontal"
                            android:padding="@dimen/normal_margin_padding"
                            android:text="@string/add_new"
                            android:textColor="@color/colorAccent"
                            android:textSize="@dimen/font"/>

                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_marginStart="@dimen/big_margin_padding"
                            android:layout_marginEnd="@dimen/big_margin_padding"
                            android:gravity="center"
                            android:layout_height="wrap_content">

                        <com.ids.librascan.custom.CustomTextViewMedium
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/small_margin_padding"
                                android:text="@string/search"
                                android:textColor="@color/colorAccent"
                                android:textSize="@dimen/font"/>

                        <RelativeLayout android:layout_width="0dp"
                                        android:layout_weight="3"
                                        android:background="@drawable/rounded_gray_edit_text"
                                        android:minHeight="@dimen/edit_text_height"
                                        android:layout_height="wrap_content">

                            <AutoCompleteTextView
                                android:id="@+id/tvTitleCode"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_toStartOf="@+id/ivScan"
                                android:background="@android:color/transparent"
                                android:gravity="center_vertical"
                                android:hint="@string/name_code"
                                android:importantForAutofill="no"
                                android:maxLines="1"
                                android:minHeight="@dimen/edit_text_height"
                                android:minLines="1"
                                android:padding="@dimen/big_margin_padding"
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="@dimen/small_font" />

                            <ImageView
                                android:id="@+id/ivScan"
                                android:layout_width="@dimen/edit_text_height"
                                android:layout_height="@dimen/edit_text_height"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="@dimen/small_margin_padding"
                                android:layout_marginTop="@dimen/small_margin_padding"
                                android:layout_marginEnd="@dimen/small_margin_padding"
                                android:layout_marginBottom="@dimen/small_margin_padding"
                                android:src="@drawable/scan"
                                app:tint="@color/colorPrimaryDark" />

                        </RelativeLayout>
                    </LinearLayout>

                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:layout_marginTop="@dimen/normal_margin_padding"
                            android:layout_marginStart="@dimen/big_margin_padding"
                            android:layout_marginEnd="@dimen/big_margin_padding"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        <com.ids.librascan.custom.CustomTextViewMedium
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/normal_margin_padding"
                                android:text="@string/units"
                                android:textColor="@color/colorAccent"
                                android:textSize="@dimen/font"/>

                        <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_weight="3"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/normal_margin_padding"
                                android:minHeight="@dimen/size_20"
                                android:background="@drawable/rounded_gray_edit_text">

                            <Spinner
                                android:id="@+id/spUnits"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_centerInParent="true"
                                android:layout_marginStart="@dimen/small_margin_padding"
                                android:layout_marginEnd="@dimen/small_margin_padding"
                                android:layout_toStartOf="@+id/ivUnit"
                                android:background="@android:color/transparent" />

                            <ImageView
                                    android:id="@+id/ivUnit"
                                    android:layout_width="10dp"
                                    android:layout_height="10dp"
                                    android:layout_alignParentEnd="true"
                                    android:layout_centerVertical="true"
                                    android:layout_margin="@dimen/small_margin_padding"
                                    android:rotation="270"
                                    android:src="@drawable/back"
                                   app:tint="@color/colorPrimaryDark" />

                        </RelativeLayout>


                    </LinearLayout>

                    <LinearLayout
                            android:layout_marginTop="@dimen/normal_margin_padding"
                            android:layout_marginStart="@dimen/big_margin_padding"
                            android:layout_marginEnd="@dimen/big_margin_padding"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        <com.ids.librascan.custom.CustomTextViewMedium
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_gravity="center_vertical"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/small_margin_padding"
                                android:text="@string/quantity"
                                android:textColor="@color/colorAccent"
                                android:textSize="@dimen/font"/>


                        <LinearLayout
                                android:orientation="horizontal"
                                android:layout_gravity="center_vertical"
                                android:layout_width="0dp"
                                android:layout_weight="3"
                                android:layoutDirection="ltr"
                                android:background="@drawable/rounded_gray_edit_text"
                                android:layout_height="wrap_content">

                            <TextView
                                    android:id="@+id/tvDecrement"
                                    android:text="-"
                                    android:layout_gravity="center_horizontal"
                                    android:background="@drawable/rounded_left_gray"
                                    android:textColor="@color/white"
                                    android:gravity="center_horizontal"
                                    android:textSize="@dimen/small_font"
                                    android:padding="@dimen/big_margin_padding"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:minHeight="@dimen/edit_text_height"
                                    android:layout_height="wrap_content"/>

                            <EditText
                                    android:id="@+id/etQty"
                                    android:importantForAutofill="no"
                                    android:inputType="number"
                                    android:background="@android:color/transparent"
                                    android:textColor="@color/colorPrimaryDark"
                                    android:gravity="center_vertical|center_horizontal"
                                    android:text="1"
                                    android:textSize="@dimen/small_font"
                                    android:padding="@dimen/big_margin_padding"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:minHeight="@dimen/edit_text_height"
                                    android:layout_height="wrap_content"/>

                            <TextView
                                    android:id="@+id/tvIncrement"
                                    android:text="+"
                                    android:layout_gravity="center_horizontal"
                                    android:background="@drawable/rounded_right_gray"
                                    android:textColor="@color/white"
                                    android:gravity="center_horizontal"
                                    android:textSize="@dimen/small_font"
                                    android:padding="@dimen/big_margin_padding"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:minHeight="@dimen/edit_text_height"
                                    android:layout_height="wrap_content"/>

                        </LinearLayout>
                    </LinearLayout>



                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/small_margin"
                        android:background="@drawable/bottom_rounded_green"
                        android:layout_height="@dimen/button_height">

                    <com.ids.librascan.custom.CustomTextViewBold
                            android:id="@+id/tvInsert"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:layout_height="match_parent"
                            android:textColor="@color/white"
                            android:textSize="@dimen/font"
                            android:text="@string/insert"/>

                    <View android:layout_width="1dp"
                          android:layout_height="match_parent"
                          android:background="@color/white"/>

                    <com.ids.librascan.custom.CustomTextViewBold
                            android:id="@+id/tvInsertClose"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:layout_height="match_parent"
                            android:textColor="@color/white"
                            android:textSize="@dimen/font"
                            android:text="@string/insert_and_save"/>

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/llRvSearchProduct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="90sp"
                android:orientation="vertical"
                android:visibility="gone"
                android:paddingStart="@dimen/big_margin_padding"
                android:paddingEnd="@dimen/big_margin_padding" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:padding="@dimen/normal_margin_padding"
                    android:text="@string/add_new"
                    android:visibility="invisible"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/font"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="35sp"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:visibility="invisible" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvProductSearch"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_marginEnd="38sp"
                        android:layout_marginBottom="@dimen/small_margin_padding"
                        android:dividerHeight="0.5dp"  />
                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </FrameLayout>


</FrameLayout>
</layout>