<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_marginBottom="@dimen/small_margin"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_marginStart="@dimen/margin_start_end"
        android:layout_marginEnd="@dimen/margin_start_end"
        android:background="@color/white"
        app:cardElevation="@dimen/small_margin_padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_margin="@dimen/big_margin_padding"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent">


                <com.ids.cloud9.custom.CustomTextViewBold
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/medium_font"
                    android:id="@+id/tvSubject"
                    android:textColor="@color/lighter_blue"
                    android:text=""/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <com.ids.cloud9.custom.CustomTextViewMedium
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/normal_margin_padding"
                    android:textSize="@dimen/small_font"
                    android:layout_weight="1"
                    android:id="@+id/tvDesc"
                    android:textColor="@color/otw_text"
                    android:text="desc"/>

                    <com.ids.cloud9.custom.CustomTextViewMedium
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/normal_margin_padding"
                        android:textSize="@dimen/small_font"
                        android:layout_weight="1"
                        android:id="@+id/tvDate"
                        android:gravity="end"
                        android:textColor="@color/otw_text" />

                </LinearLayout>




            </LinearLayout>





        </LinearLayout>



    </androidx.cardview.widget.CardView>

</LinearLayout>