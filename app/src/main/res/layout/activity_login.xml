<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rootLogin"
    android:background="@drawable/background"
    android:orientation="vertical">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/with_200"
            android:layout_gravity="center"
            android:src="@drawable/icon_google"
            android:layout_marginTop="@dimen/margin_30"/>



        <Button
            android:layout_width="@dimen/with_200"
            android:layout_height="wrap_content"
            android:id="@+id/btLogin"
            android:text="@string/signIn"
            android:tag="signIn"
            android:background="@drawable/rounded_button_layout"
            android:layout_marginTop="100dp"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/big_margin"
           android:textAllCaps="true"/>

        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:background="@drawable/block_white_border_gray"
            android:layout_marginTop="@dimen/height_40"
            android:id="@+id/btChangeLanguage"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            >
                <com.ids.librascan.custom.CustomTextViewMedium
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:tag="lang"
                    android:text="@string/lang"
                    android:textColor="@color/black"
                    android:textDirection="locale"
                    android:textSize="@dimen/font" />
        </LinearLayout>






</LinearLayout>
</layout>