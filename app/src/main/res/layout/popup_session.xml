<?xml version="1.0" encoding="utf-8"?>
    <FrameLayout
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/llPagerSession"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="true"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:layout_width="@dimen/button_height"
            android:layout_height="@dimen/button_height"
            android:text="x"
            android:textStyle="bold"
            android:textSize="@dimen/header_font"
            android:textColor="@color/white"
            android:id="@+id/btClose"
            android:scaleType="centerInside"
            android:layout_gravity="top|end"
            android:background="@drawable/green_circle"/>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <androidx.cardview.widget.CardView
                android:layout_gravity="center"
                app:cardUseCompatPadding="true"
                app:cardElevation="@dimen/app_elevation"
                android:layout_margin="@dimen/big_margin_padding"
                app:cardCornerRadius="@dimen/button_radius"
                app:cardBackgroundColor="@color/card_bg"
                app:cardPreventCornerOverlap="false"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="0dp"
                        android:layout_weight="1">

                        <com.ids.librascan.custom.CustomTextViewBold
                            android:id="@+id/tvTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:gravity="center_horizontal"
                            android:padding="@dimen/normal_margin_padding"
                            android:layout_marginTop="@dimen/small_margin"
                            android:text="@string/add_session"
                            android:textColor="@color/colorAccent"
                            android:textSize="@dimen/size_18" />

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_marginStart="@dimen/big_margin_padding"
                            android:layout_marginEnd="@dimen/big_margin_padding"
                            android:gravity="center"
                            android:layout_height="wrap_content">

                            <com.ids.librascan.custom.CustomTextViewMedium
                                android:layout_width="0dp"
                                android:layout_weight="2"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/padding_5"
                                android:text="@string/session_name"
                                android:tag="session_name"
                                android:textColor="@color/colorAccent"
                                android:textSize="@dimen/font"/>


                            <RelativeLayout android:layout_width="0dp"
                                android:layout_weight="3"
                                android:background="@drawable/rounded_gray_edit_text"
                                android:minHeight="@dimen/edit_text_height"
                                android:layout_height="wrap_content">

                                <AutoCompleteTextView
                                    android:id="@+id/tvName"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@android:color/transparent"
                                    android:gravity="center_vertical"
                                    android:hint="@string/name"
                                    android:maxLines="3"
                                    android:minHeight="@dimen/height_40"
                                    android:minLines="1"
                                    android:padding="@dimen/big_margin_padding"
                                    android:textColor="@color/colorPrimaryDark"
                                    android:textSize="@dimen/small_font" />

                            </RelativeLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:layout_marginTop="@dimen/normal_margin_padding"
                            android:layout_marginBottom="5dp"
                            android:layout_marginStart="@dimen/big_margin_padding"
                            android:layout_marginEnd="@dimen/big_margin_padding"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:layout_height="match_parent">

                                <com.ids.librascan.custom.CustomTextViewMedium
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="@dimen/small_margin_padding"
                                    android:tag="warehouse"
                                    android:text="@string/warehouse"
                                    android:textColor="@color/colorAccent"
                                    android:textSize="@dimen/font" />

                                <ImageView
                                    android:id="@+id/ivReloadWarehouse"
                                    android:layout_width="@dimen/size_20"
                                    android:layout_height="@dimen/size_20"
                                    android:layout_marginEnd="@dimen/margin_10"
                                    android:layout_alignParentEnd="true"
                                    android:layout_marginTop="@dimen/margin_10"
                                    android:src="@drawable/sync"
                                    android:tint="@color/gray_bg"
                                    tools:ignore="UseAppTint" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_weight="1.5"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/normal_margin_padding"
                                android:minHeight="@dimen/size_20"
                                android:background="@drawable/rounded_gray_edit_text">


                                <Spinner
                                    android:id="@+id/spWarehouse"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentStart="true"
                                    android:layout_centerInParent="true"
                                    android:layout_marginStart="@dimen/small_margin_padding"
                                    android:layout_marginEnd="@dimen/small_margin_padding"
                                    android:layout_toStartOf="@+id/ivWarehouse"
                                    android:background="@android:color/transparent"
                                    android:clickable="false"
                                    android:focusable="true" />

                                <ImageView
                                    android:id="@+id/ivWarehouse"
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"
                                    android:layout_alignParentEnd="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginStart="@dimen/small_margin_padding"
                                    android:layout_marginTop="@dimen/small_margin_padding"
                                    android:layout_marginEnd="@dimen/small_margin_padding"
                                    android:layout_marginBottom="@dimen/small_margin_padding"
                                    android:onClick="showWarehouse"
                                    android:rotation="270"
                                    android:src="@drawable/icon_spinner"
                                    app:tint="@color/colorPrimaryDark" />

                            </RelativeLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_marginStart="@dimen/big_margin_padding"
                            android:layout_marginEnd="@dimen/big_margin_padding"
                            android:layout_marginBottom="5dp"
                            android:gravity="center"
                            android:layout_height="wrap_content">

                            <com.ids.librascan.custom.CustomTextViewMedium
                                android:layout_width="0dp"
                                android:layout_weight="2"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/padding_5"
                                android:text="@string/date"
                                android:tag="date"
                                android:textColor="@color/colorAccent"
                                android:textSize="@dimen/font"/>


                            <RelativeLayout android:layout_width="0dp"
                                android:layout_weight="3"
                                android:background="@drawable/rounded_gray_edit_text"
                                android:minHeight="@dimen/edit_text_height"
                                android:layout_height="wrap_content">

                                <com.ids.librascan.custom.CustomTextViewMedium
                                    android:id="@+id/tvDate"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@android:color/transparent"
                                    android:gravity="center_vertical"
                                    android:hint="@string/please_enter_a_date"
                                    android:maxLines="3"
                                    android:minHeight="@dimen/height_40"
                                    android:minLines="1"
                                    android:padding="@dimen/big_margin_padding"
                                    android:textColor="@color/colorPrimaryDark"
                                    android:textSize="@dimen/small_font" />

                            </RelativeLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_marginStart="@dimen/big_margin_padding"
                            android:layout_marginEnd="@dimen/big_margin_padding"
                            android:gravity="center"
                            android:layout_height="wrap_content">

                            <com.ids.librascan.custom.CustomTextViewMedium
                                android:layout_width="0dp"
                                android:layout_weight="2"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/padding_5"
                                android:text="@string/description"
                                android:tag="description"
                                android:textColor="@color/colorAccent"
                                android:textSize="@dimen/font"/>


                            <RelativeLayout android:layout_width="0dp"
                                android:layout_weight="3"
                                android:background="@drawable/rounded_gray_edit_text"
                                android:minHeight="@dimen/edit_text_height"
                                android:layout_height="wrap_content">

                                <AutoCompleteTextView
                                    android:id="@+id/tvDescription"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@android:color/transparent"
                                    android:gravity="center_vertical"
                                    android:importantForAutofill="yes"
                                    android:maxLines="3"
                                    android:minHeight="@dimen/height_50"
                                    android:minLines="1"
                                    android:padding="@dimen/big_margin_padding"
                                    android:textColor="@color/colorPrimaryDark"
                                    android:textSize="@dimen/small_font" />

                            </RelativeLayout>

                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/small_margin"
                        android:focusable="true"
                        android:clickable="true"
                        android:background="@drawable/bottom_rounded_green"
                        android:layout_height="@dimen/button_height">

                        <com.ids.librascan.custom.CustomTextViewBold
                            android:id="@+id/tvInsert"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:layout_height="match_parent"
                            android:textColor="@color/white"
                            android:textSize="@dimen/font"
                            android:tag="insert"
                            android:background="?android:attr/selectableItemBackground"
                            android:text="@string/insert"/>

                    </LinearLayout>



                </LinearLayout>

                <LinearLayout
                    android:id="@+id/loadingData"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="bottom"
                    android:clickable="true"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <ProgressBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"/>

                    <com.ids.librascan.custom.CustomTextViewMedium
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/loading"
                        android:tag="loading"
                        android:visibility="gone"
                        android:layout_gravity="center"
                        android:textColor="@color/gray_bg"
                        android:textSize="@dimen/size_30"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>


        </FrameLayout>




    </FrameLayout>
