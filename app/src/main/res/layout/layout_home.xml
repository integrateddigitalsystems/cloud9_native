<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:elevation="@dimen/small_margin"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/barcode_width_height"
        android:background="@drawable/gradient_bg">

        <ImageView
            android:id="@+id/ivDrawer"
            android:layout_marginStart="@dimen/small_margin"
            android:tint="@color/white"
            android:layout_centerVertical="true"
            android:layout_width="@dimen/height_toggle"
            android:layout_height="@dimen/height_toggle"
            android:src="@drawable/align_left"/>

        <com.ids.cloud9.custom.CustomTextViewMedium
            android:layout_width="match_parent"
            android:text="Visits"
            android:textSize="@dimen/normal_font"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_height="match_parent" />

    </RelativeLayout>


    <androidx.cardview.widget.CardView
        app:cardElevation="@dimen/normal_margin_padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/barcode_width_height"
        android:background="@color/white">

        <com.ids.cloud9.custom.CustomTextViewMedium
            android:id="@+id/tvDate"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Jan 8 - 14, 2023"
            android:textColor="@color/text_color" />

        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

        <LinearLayout
            android:layout_marginEnd="@dimen/normal_margin_padding"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" >


        <com.ids.cloud9.custom.CustomTextViewMedium
            android:layout_width="@dimen/min_height"
            android:textColor="@color/white"
            android:text="today"
            android:gravity="center"
            android:textSize="@dimen/title_font"
            android:background="@drawable/rounded_dark_blue"
            android:layout_height="@dimen/with_toggle"
           />

        </LinearLayout>

        <LinearLayout
            android:layout_marginEnd="@dimen/normal_margin_padding"
            android:layout_marginTop="@dimen/small_margin_padding"
            android:layout_marginBottom="@dimen/small_margin_padding"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/with_toggle">

            <LinearLayout
                android:id="@+id/btDatePrevious"
                android:foreground="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:paddingTop="@dimen/small_margin_padding"
                android:paddingBottom="@dimen/small_margin_padding"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/rounded_dark_left">
                <ImageView
                    android:layout_marginStart="@dimen/normal_margin_padding"
                    android:layout_marginEnd="@dimen/normal_margin_padding"
                    android:tint="@color/white"
                    android:layout_width="@dimen/icon_medium"
                    android:layout_height="@dimen/icon_medium"
                    android:src="@drawable/back"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btDateNext"
                android:foreground="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/rounded_dark_right">
                <ImageView
                    android:layout_marginStart="@dimen/normal_margin_padding"
                    android:layout_marginEnd="@dimen/normal_margin_padding"
                    android:rotation="180"
                    android:tint="@color/white"
                    android:layout_width="@dimen/icon_medium"
                    android:layout_height="@dimen/icon_medium"
                    android:src="@drawable/back"/>
            </LinearLayout>


        </LinearLayout>

        </LinearLayout>


    </LinearLayout>

    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray_app_bg">
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rvVisits"/>

    </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:visibility="gone">

        <include
            layout="@layout/loading" />

    </LinearLayout>

</RelativeLayout>