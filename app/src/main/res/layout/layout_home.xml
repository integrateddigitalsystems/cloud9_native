<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <RelativeLayout
        android:elevation="@dimen/small_margin"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/back_width_height"
        android:background="@drawable/gradient_bg">

        <ImageView
            android:id="@+id/ivDrawer"
            android:layout_marginStart="@dimen/small_margin"
            android:tint="@color/white"
            android:layout_centerVertical="true"
            android:layout_width="@dimen/height_toggle"
            android:layout_height="@dimen/height_toggle"
            android:src="@drawable/align_left"/>

        <com.ids.cloud9.custom.CustomTextViewMedium
            android:layout_width="match_parent"
            android:text="Test"
            android:textSize="@dimen/normal_font"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_height="match_parent" />

    </RelativeLayout>


    <androidx.cardview.widget.CardView
        app:cardElevation="@dimen/normal_margin_padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <com.ids.cloud9.custom.CustomTextViewMedium
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <LinearLayout
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" >


        <com.ids.cloud9.custom.CustomTextViewMedium
            android:layout_width="wrap_content"
            android:textColor="@color/white"
            android:text="today"
            android:paddingStart="@dimen/normal_margin"
            android:paddingEnd="@dimen/normal_margin"
            android:paddingTop="@dimen/normal_margin_padding"
            android:paddingBottom="@dimen/normal_margin_padding"
            android:gravity="center"
            android:background="@drawable/rounded_dark_blue"
            android:layout_height="wrap_content"
           />

        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:paddingTop="@dimen/normal_margin_padding"
            android:paddingBottom="@dimen/normal_margin_padding"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/btDatePrevious"
                android:foreground="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:paddingTop="@dimen/small_margin_padding"
                android:paddingBottom="@dimen/small_margin_padding"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/rounded_dark_left">
                <ImageView
                    android:layout_marginStart="@dimen/normal_margin_padding"
                    android:layout_marginEnd="@dimen/normal_margin_padding"
                    android:tint="@color/white"
                    android:layout_width="@dimen/icon_medium"
                    android:layout_height="@dimen/icon_medium"
                    android:src="@drawable/back"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btDateNext"
                android:foreground="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/rounded_dark_right">
                <ImageView
                    android:layout_marginStart="@dimen/normal_margin_padding"
                    android:layout_marginEnd="@dimen/normal_margin_padding"
                    android:rotation="180"
                    android:tint="@color/white"
                    android:layout_width="@dimen/icon_medium"
                    android:layout_height="@dimen/icon_medium"
                    android:src="@drawable/back"/>
            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray_app_bg"/>

</LinearLayout>