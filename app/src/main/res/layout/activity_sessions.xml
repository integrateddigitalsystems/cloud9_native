<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        android:orientation="vertical"
        android:id="@+id/rootSessions"
        tools:context=".controller.Activities.ActivityMain">


    <LinearLayout
        android:id="@+id/loadingData"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:clickable="true"
        android:gravity="bottom"
        android:background="@drawable/rounded_gray_edit_text"
        android:orientation="vertical"
        android:visibility="gone">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>

        <com.ids.librascan.custom.CustomTextViewMedium
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/loading"
            android:tag="loading"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/size_30"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:clickable="true"
        android:gravity="center"
        android:background="@drawable/background"
        android:orientation="vertical"
        android:visibility="gone">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/small_margin"
        android:orientation="horizontal">

    <ImageView
        android:layout_width="@dimen/back_width_height"
        android:layout_height="@dimen/back_width_height"
        android:src="@drawable/back"
        android:id="@+id/ivBack"
        android:paddingTop="@dimen/normal_margin_padding"
        android:tint="@color/white"
        android:paddingBottom="@dimen/normal_margin_padding"
        android:paddingStart="@dimen/big_margin_padding"
        android:paddingEnd="@dimen/normal_margin_padding"
        android:contentDescription="@string/app_name"
        android:onClick="back"
        app:tint="@color/white"
        tools:ignore="UseAppTint" />

        <LinearLayout
            android:id="@+id/llAddSession"
            android:layout_marginStart="280dp"
            android:layout_marginEnd="280dp"
            android:layout_width="@dimen/button_height"
            android:layout_height="@dimen/button_height"
            android:layout_marginTop="@dimen/normal_margin_padding"
            android:layout_marginBottom="@dimen/normal_margin_padding"
            android:background="@drawable/rounded_primary_layout"
            android:gravity="center">

            <ImageView
                android:layout_width="@dimen/size_30"
                android:layout_height="@dimen/size_30"
                android:layout_gravity="center_vertical|center_horizontal"
                android:src="@drawable/add_session"
                app:tint="@color/white" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/margin_100"
        android:layout_marginStart="@dimen/normal_margin_padding"
        android:layout_marginEnd="@dimen/normal_margin_padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:background="@color/colorAccent"
        android:orientation="horizontal">


        <com.ids.librascan.custom.CustomTextViewBold
            android:id="@+id/tvSessionName"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:padding="@dimen/normal_margin_padding"
            android:tag="session_name"
            android:paddingEnd="1dp"
            android:text="@string/session_name"
            android:textColor="@android:color/white"
            android:textSize="18sp" />
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/margin_100"
        android:layout_weight="1">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rVSessions"
            android:paddingStart="@dimen/normal_margin_padding"
            android:paddingEnd="@dimen/normal_margin_padding"
            android:layout_marginTop="@dimen/height_40"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rlBarcode"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <fragment
            android:id="@+id/barcodeReader"
            android:name="info.bideens.barcode.BarcodeReader"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:auto_focus="true"
            app:use_flash="false" />

        <info.bideens.barcode.ScannerOverlay
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#44000000"
            app:line_color="#7323DC"
            app:line_speed="6"
            app:line_width="4"
            app:square_height="200"
            app:square_width="200"/>

    </RelativeLayout>

    </FrameLayout>
</layout>