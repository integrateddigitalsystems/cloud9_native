<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        android:orientation="vertical"
        android:id="@+id/rootSessions"
        tools:context=".controller.Activities.ActivityMain">


    <LinearLayout
        android:id="@+id/loadingData"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:clickable="true"
        android:gravity="bottom"
        android:background="@drawable/rounded_gray_edit_text"
        android:orientation="vertical"
        android:visibility="gone">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>

        <com.ids.librascan.custom.CustomTextViewMedium
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/loading"
            android:tag="loading"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/size_30"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:clickable="true"
        android:gravity="center"
        android:background="@drawable/background"
        android:orientation="vertical"
        android:visibility="gone">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />

    </LinearLayout>

        <ImageView
            android:id="@+id/iVMore"
            android:layout_width="@dimen/size_30"
            android:layout_height="@dimen/size_30"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/small_margin"
            app:tint="@color/white"
            android:src="@drawable/icon_more"
            android:layout_marginEnd="@dimen/small_margin"
            tools:ignore="ContentDescription" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/big_margin"
        android:layout_gravity="end"
        android:gravity="end"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/small_margin"
            android:layout_marginStart="@dimen/margin_100"
            android:orientation="horizontal">

            <com.ids.librascan.custom.CustomTextViewBold
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ellipsize="start"
                android:maxLines="2"
                android:text="@string/add_session"
                android:tag="add_session"
                android:gravity="start|center"
                android:layout_gravity="start"
                android:textColor="@color/white"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llAddSession"
            android:layout_marginTop="@dimen/small_margin"
            android:layout_marginEnd="@dimen/normal_margin"
            android:layout_marginStart="@dimen/small_margin"
            android:layout_width="@dimen/button_height"
            android:layout_height="@dimen/button_height"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginBottom="@dimen/normal_margin_padding"
            android:background="@drawable/rounded_primary_layout"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center"
                android:background="?android:attr/selectableItemBackground"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="@dimen/size_30"
                    android:layout_height="@dimen/size_30"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:src="@drawable/add_session"
                    app:tint="@color/white" />
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/margin_120"
        android:layout_marginStart="@dimen/normal_margin_padding"
        android:layout_marginEnd="@dimen/normal_margin_padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:background="@color/colorAccent"
        android:orientation="horizontal">


        <com.ids.librascan.custom.CustomTextViewBold
            android:id="@+id/tvSessionName"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/normal_margin_padding"
            android:tag="session_name"
            android:text="@string/session_name"
            android:textColor="@android:color/white"
            android:textSize="@dimen/small_font" />

        <com.ids.librascan.custom.CustomTextViewBold
            android:id="@+id/tvWarehouse"
            android:padding="@dimen/normal_margin_padding"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:layout_margin="2dp"
            android:text="@string/warehouse"
            android:tag="warehouse"
            android:textColor="@android:color/white"
            android:textSize="@dimen/small_font"/>

        <com.ids.librascan.custom.CustomTextViewBold
            android:id="@+id/tvDate"
            android:padding="@dimen/normal_margin_padding"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:layout_margin="2dp"
            android:text="@string/date"
            android:tag="date"
            android:textColor="@android:color/white"
            android:textSize="@dimen/small_font"/>

    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="10"
        android:layout_marginTop="@dimen/margin_100">


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rVSessions"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="55dp"
            android:layout_weight="9.8"
            android:orientation="vertical"
            android:paddingStart="@dimen/normal_margin_padding"
            android:paddingEnd="@dimen/normal_margin_padding" />

        <com.ids.librascan.custom.CustomTextViewMedium
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/tvNodata"
            android:text="@string/no_data"
            android:gravity="center"
            android:visibility="gone"
            android:tag="no_data"
            android:textSize="@dimen/size_14"
            android:textColor="@color/white"/>


        <LinearLayout
            android:id="@+id/llSync"
            android:layout_width="@dimen/width_150"
            android:layout_height="@dimen/button_height"
            android:visibility="gone"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:focusable="true"
            android:clickable="true"
            android:background="@drawable/rounded_primary_layout"
            android:gravity="center">
            <RelativeLayout
                android:layout_width="match_parent"
                android:background="?android:attr/selectableItemBackground"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="@dimen/size_20"
                    android:layout_centerVertical="true"
                    android:id="@+id/tvSync"
                    android:layout_marginStart="@dimen/size_20"
                    android:layout_marginEnd="@dimen/size_20"
                    android:layout_height="@dimen/size_20"
                    android:src="@drawable/sync" />

                <com.ids.librascan.custom.CustomTextViewBold
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/syncAll"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font" />
            </RelativeLayout>


        </LinearLayout>


            <Button
                android:id="@+id/btShowScan"
                android:onClick="checkCameraPermissions"
                android:layout_width="0dp"
                android:visibility="gone"
                android:layout_height="0dp"/>

        </LinearLayout>



    <RelativeLayout
        android:id="@+id/rlBarcode"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <fragment
            android:id="@+id/barcodeReader"
            android:name="info.bideens.barcode.BarcodeReader"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:auto_focus="true"
            app:use_flash="false" />

        <com.ids.librascan.custom.CustomTextViewBold
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvNameSession"
            android:textSize="@dimen/size_20"
            android:layout_marginStart="@dimen/small_margin"
            android:layout_marginEnd="@dimen/small_margin"
            android:layout_marginTop="@dimen/small_margin"
            android:textColor="@color/white"
            android:text="Session 1"/>

        <info.bideens.barcode.ScannerOverlay
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#44000000"
            app:line_color="#7323DC"
            app:line_speed="6"
            app:line_width="4"
            app:square_height="@integer/m3_sys_motion_duration_100"
            app:square_width="@integer/material_motion_duration_long_1"/>

    </RelativeLayout>

    </FrameLayout>
</layout>