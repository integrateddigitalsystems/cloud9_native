<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_start_end"
        android:layout_marginTop="@dimen/small_margin"
        android:layout_marginEnd="@dimen/margin_start_end"
        android:gravity="center"
        android:orientation="vertical">

        <com.ids.cloud9.custom.CustomTextViewBold
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/tvSerialised"
            android:gravity="center_vertical"
            android:text="@string/serial_number"
            android:textColor="@color/text_color"
            android:textSize="@dimen/normal_font" />

        <com.ids.molilo.custom.CustomEditText
            android:id="@+id/etSerialNumber"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/small_margin_padding"
            android:layout_weight="1"
            android:inputType="number"
            android:background="@drawable/rounded_gray_border"
            android:gravity="center_vertical"
            android:minHeight="@dimen/height_40"
            android:padding="@dimen/small_margin_padding"
            android:textColor="@color/text_color"
            android:textSize="@dimen/normal_font" />

    </LinearLayout>

</LinearLayout>