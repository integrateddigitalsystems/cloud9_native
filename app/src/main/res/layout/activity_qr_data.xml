<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/card_bg"
    android:orientation="vertical"
    tools:context=".controller.Activities.ActivityQrData">

    <include layout="@layout/loading_trans"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_marginStart="@dimen/big_margin_padding"
        android:layout_marginEnd="@dimen/big_margin_padding"
        android:layout_marginTop="@dimen/small_margin"
        android:gravity="center"
        android:layout_height="wrap_content">

        <com.ids.librascan.custom.CustomTextViewMedium
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:padding="@dimen/small_margin_padding"
            android:text="@string/search"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/font"/>

        <RelativeLayout android:layout_width="0dp"
            android:layout_weight="4"
            android:background="@drawable/rounded_gray_edit_text"
            android:minHeight="@dimen/edit_text_height"
            android:layout_height="wrap_content">

            <AutoCompleteTextView
                android:id="@+id/tvBarcode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@+id/ivScan"
                android:background="@android:color/transparent"
                android:gravity="center_vertical"
                android:hint="@string/name_code"
                android:importantForAutofill="no"
                android:maxLines="1"
                android:minHeight="@dimen/edit_text_height"
                android:minLines="1"
                android:padding="@dimen/big_margin_padding"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/small_font" />

            <ImageView
                android:id="@+id/ivScan"
                android:layout_width="@dimen/edit_text_height"
                android:layout_height="@dimen/edit_text_height"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/small_margin_padding"
                android:layout_marginTop="@dimen/small_margin_padding"
                android:layout_marginEnd="@dimen/small_margin_padding"
                android:layout_marginBottom="@dimen/small_margin_padding"
                android:src="@drawable/scan" />

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_marginStart="@dimen/small_margin_padding"
        android:layout_marginEnd="@dimen/small_margin_padding"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/big_margin"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <LinearLayout
        android:layout_marginTop="@dimen/normal_margin_padding"
        android:layout_marginStart="@dimen/normal_margin_padding"
        android:layout_marginEnd="@dimen/normal_margin_padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:background="@color/colorAccent"
        android:orientation="horizontal">


        <com.ids.librascan.custom.CustomTextViewBold
            android:id="@+id/tvItem"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:padding="@dimen/normal_margin_padding"
            android:paddingStart="@dimen/button_2_height"
            android:paddingEnd="1dp"
            android:text="@string/item"
            android:textColor="@android:color/white"
            android:textSize="@dimen/small_font" />

        <com.ids.librascan.custom.CustomTextViewBold
            android:id="@+id/tvQuantity"
            android:padding="@dimen/normal_margin_padding"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical|center_horizontal"
            android:layout_margin="2dp"
            android:text="@string/quantity"
            android:textColor="@android:color/white"
            android:textSize="@dimen/small_font"/>

        <com.ids.librascan.custom.CustomTextViewBold
            android:id="@+id/tvUnit"
            android:padding="@dimen/normal_margin_padding"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical|center_horizontal"
            android:layout_margin="2dp"
            android:text="@string/unit"
            android:textColor="@android:color/white"
            android:textSize="@dimen/small_font"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rVQrData"
            android:paddingStart="@dimen/normal_margin_padding"
            android:paddingEnd="@dimen/normal_margin_padding"
            android:layout_marginTop="@dimen/small_margin_padding"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

    </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/rlBarcode"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <fragment
            android:id="@+id/barcodeReader"
            android:name="info.bideens.barcode.BarcodeReader"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:auto_focus="true"
            app:use_flash="false" />

        <info.bideens.barcode.ScannerOverlay
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#44000000"
            app:line_color="#7323DC"
            app:line_speed="6"
            app:line_width="4"
            app:square_height="200"
            app:square_width="200"/>

    </RelativeLayout>
</FrameLayout>
</layout>