<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/card_bg"
    android:orientation="vertical"
    tools:context=".controller.Activities.ActivityQrData">

    <include layout="@layout/loading_trans"/>

    <LinearLayout
        android:layout_marginStart="@dimen/small_margin_padding"
        android:layout_marginEnd="@dimen/small_margin_padding"
        android:layout_marginTop="@dimen/big_margin"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <LinearLayout
        android:layout_marginTop="@dimen/normal_margin_padding"
        android:layout_marginStart="@dimen/normal_margin_padding"
        android:layout_marginEnd="@dimen/normal_margin_padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:background="@color/colorAccent"
        android:orientation="horizontal">


        <com.ids.librascan.custom.CustomTextViewBold
            android:id="@+id/tvItem"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:padding="@dimen/normal_margin_padding"
            android:paddingStart="@dimen/button_2_height"
            android:paddingEnd="1dp"
            android:text="@string/item"
            android:textColor="@android:color/white"
            android:textSize="@dimen/small_font" />

        <com.ids.librascan.custom.CustomTextViewBold
            android:id="@+id/tvQuantity"
            android:padding="@dimen/normal_margin_padding"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical|center_horizontal"
            android:layout_margin="2dp"
            android:text="@string/quantity"
            android:textColor="@android:color/white"
            android:textSize="@dimen/small_font"/>

        <com.ids.librascan.custom.CustomTextViewBold
            android:id="@+id/tvUnit"
            android:padding="@dimen/normal_margin_padding"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical|center_horizontal"
            android:layout_margin="2dp"
            android:text="@string/unit"
            android:textColor="@android:color/white"
            android:textSize="@dimen/small_font"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rVQrData"
            android:paddingStart="@dimen/normal_margin_padding"
            android:paddingEnd="@dimen/normal_margin_padding"
            android:layout_marginTop="@dimen/small_margin_padding"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

    </LinearLayout>
    </LinearLayout>

</LinearLayout>
</layout>