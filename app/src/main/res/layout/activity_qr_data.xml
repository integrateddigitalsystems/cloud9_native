<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        android:orientation="vertical"
        android:id="@+id/rootData"
        tools:context=".controller.Activities.ActivityQrData">

        <LinearLayout
            android:id="@+id/loading"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:clickable="true"
            android:gravity="center"
            android:background="@drawable/background"
            android:orientation="vertical"
            android:visibility="gone">

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />

        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="5dp">
            <ImageView
                android:layout_width="@dimen/back_width_height"
                android:layout_height="@dimen/back_width_height"
                android:src="@drawable/back"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:id="@+id/ivBack"
                android:paddingTop="@dimen/normal_margin_padding"
                android:tint="@color/white"
                android:paddingBottom="@dimen/normal_margin_padding"
                android:paddingStart="@dimen/big_margin_padding"
                android:paddingEnd="@dimen/normal_margin_padding"
                android:contentDescription="@string/app_name"
                android:onClick="back"
                app:tint="@color/white"
                tools:ignore="UseAppTint" />


        </LinearLayout>



        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_marginStart="@dimen/big_margin_padding"
            android:layout_marginEnd="@dimen/big_margin_padding"
            android:layout_marginTop="@dimen/size_image_60"
            android:gravity="center"
            android:layout_marginBottom="@dimen/height_50"
            android:layout_height="wrap_content">

            <com.ids.librascan.custom.CustomTextViewMedium
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:padding="@dimen/small_margin_padding"
                android:text="@string/search"
                android:tag="search"
                android:textColor="@color/white"
                android:textSize="@dimen/font"/>

            <RelativeLayout android:layout_width="0dp"
                android:layout_weight="4"
                android:background="@drawable/rounded_gray_edit_text"
                android:minHeight="@dimen/size_30"
                android:layout_height="wrap_content">

                <AutoCompleteTextView
                    android:id="@+id/tvBarcode"
                    android:layout_width="@dimen/width_250"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical"
                    android:hint="@string/name_code"
                    android:importantForAutofill="yes"
                    android:maxLines="1"
                    android:minHeight="@dimen/size_30"
                    android:padding="@dimen/big_margin_padding"
                    android:tag="code"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textSize="@dimen/small_font" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="end"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ivClear"
                        android:layout_width="@dimen/size_20"
                        android:layout_height="@dimen/size_20"
                        android:layout_gravity="end|center"
                        android:src="@drawable/icon_clear"
                        android:tint="@color/white"
                        android:visibility="gone"
                        tools:ignore="UseAppTint" />


                    <ImageView
                        android:id="@+id/ivScan"
                        android:layout_width="@dimen/edit_text_height"
                        android:layout_height="@dimen/edit_text_height"
                        android:layout_gravity="end|center"
                        android:layout_marginStart="@dimen/small_margin_padding"
                        android:layout_marginTop="@dimen/small_margin_padding"
                        android:layout_marginEnd="@dimen/small_margin_padding"
                        android:layout_marginBottom="@dimen/small_margin_padding"
                        android:src="@drawable/scan" />

                </LinearLayout>

            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_marginStart="@dimen/small_margin_padding"
            android:layout_marginEnd="@dimen/small_margin_padding"
            android:orientation="vertical"
            android:layout_marginTop="110dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">



            <LinearLayout
                android:layout_marginTop="@dimen/normal_margin_padding"
                android:layout_marginStart="@dimen/normal_margin_padding"
                android:layout_marginEnd="@dimen/normal_margin_padding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:background="@color/colorAccent"
                android:orientation="horizontal">


                <com.ids.librascan.custom.CustomTextViewBold
                    android:id="@+id/tvItem"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:padding="@dimen/normal_margin_padding"
                    android:tag="barcode"
                    android:paddingEnd="1dp"
                    android:text="@string/barcode"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/small_font" />

                <com.ids.librascan.custom.CustomTextViewBold
                    android:id="@+id/tvQuantity"
                    android:padding="@dimen/normal_margin_padding"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:gravity="end"
                    android:layout_margin="2dp"
                    android:text="@string/quantity"
                    android:tag="quantity"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/small_font"/>

                <com.ids.librascan.custom.CustomTextViewBold
                    android:id="@+id/tvUnit"
                    android:padding="@dimen/normal_margin_padding"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:visibility="gone"
                    android:layout_margin="2dp"
                    android:text="@string/unit"
                    android:tag="unit"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/small_font"/>

            </LinearLayout>


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="0dp">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rVQrData"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_500"
                        android:layout_marginTop="@dimen/small_margin_padding"
                        android:orientation="vertical"
                        android:paddingStart="@dimen/normal_margin_padding"
                        android:paddingEnd="@dimen/normal_margin_padding" />

                    <com.ids.librascan.custom.CustomTextViewMedium
                        android:id="@+id/tvNodata"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:tag="no_data"
                        android:text="@string/no_data"
                        android:textColor="@color/white"
                        android:textSize="@dimen/size_14"
                        android:visibility="gone" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="5dp"
                        android:layout_weight="1"
                        android:layout_below="@+id/rVQrData"
                        android:gravity="center">

                        <LinearLayout
                            android:id="@+id/llScan"
                            android:layout_width="@dimen/height_100"
                            android:layout_height="@dimen/height_40"
                            android:layout_gravity="center"
                            android:background="@drawable/rounded_primary_layout"
                            android:gravity="center">

                            <com.ids.librascan.custom.CustomTextViewBold
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical|center_horizontal"
                                android:layout_marginStart="@dimen/small_margin_padding"
                                android:text="@string/scan"
                                android:textColor="@color/white"
                                android:textSize="14sp" />

                        </LinearLayout>
                    </LinearLayout>

                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/btShowScan"
            android:onClick="checkCameraPermissions"
            android:layout_width="0dp"
            android:visibility="gone"
            android:layout_height="0dp"/>
        <RelativeLayout
            android:id="@+id/rlBarcode"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <fragment
                android:id="@+id/barcodeReader"
                android:name="info.bideens.barcode.BarcodeReader"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:auto_focus="true"
                app:use_flash="false" />

            <com.ids.librascan.custom.CustomTextViewBold
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvNameSession"
                android:textSize="@dimen/size_20"
                android:layout_marginStart="@dimen/small_margin"
                android:layout_marginEnd="@dimen/small_margin"
                android:layout_marginTop="@dimen/small_margin"
                android:textColor="@color/white"/>


            <info.bideens.barcode.ScannerOverlay
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#44000000"
                app:line_color="#7323DC"
                app:line_speed="6"
                app:line_width="4"
                app:square_height="@integer/m3_sys_motion_duration_100"
                app:square_width="@integer/material_motion_duration_long_1"/>

        </RelativeLayout>
    </FrameLayout>
</layout>