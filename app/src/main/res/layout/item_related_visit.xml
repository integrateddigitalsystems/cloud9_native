<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_marginStart="@dimen/margin_start_end"
    android:layout_marginEnd="@dimen/margin_start_end"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:ignore="MissingDefaultResource">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/llHeaderDate"
            android:layout_marginStart="@dimen/margin_start_end"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/small_margin"
            android:layout_marginEnd="@dimen/margin_start_end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <com.ids.cloud9native.custom.CustomTextViewBold
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/tvDay"
                android:textSize="@dimen/medium_font"
                android:textColor="@color/black"
                android:layout_height="wrap_content"/>


            <com.ids.cloud9native.custom.CustomTextViewBold
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/tvDate"
                android:gravity="end"
                android:textSize="@dimen/medium_font"
                android:textColor="@color/black"
                android:layout_height="wrap_content"/>



        </LinearLayout>


    <com.ids.cloud9native.custom.CustomTextViewBold
        android:layout_marginStart="@dimen/margin_start_end"
        android:layout_marginTop="@dimen/small_pading"
        android:layout_marginEnd="@dimen/normal_margin"
        android:textSize="@dimen/normal_font"
        android:textColor="@color/medium_blue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvVisitName"/>


    <LinearLayout
        android:layout_marginBottom="@dimen/margin_start_end"
        android:layout_marginTop="@dimen/small_margin_padding"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <com.ids.cloud9native.custom.CustomTextViewMedium
            android:layout_width="0dp"
            android:layout_weight="2"
            android:paddingTop="@dimen/mini_radius"
            android:id="@+id/tvResource"
            android:textSize="@dimen/normal_font"
            android:layout_marginStart="@dimen/margin_start_end"
            android:layout_height="wrap_content" />



        <LinearLayout
            android:paddingEnd="@dimen/normal_margin"
            android:gravity="end"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

        <com.ids.cloud9native.custom.CustomTextViewMedium
            android:layout_width="wrap_content"
            android:text="pending"
            android:textSize="@dimen/smaller_font"
            android:id="@+id/tvStatus"
            android:padding="@dimen/mini_radius"
            android:background="@drawable/neon_background"
            android:textColor="@color/pending_text"
            android:layout_height="wrap_content" />



        </LinearLayout>







    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/llUnderLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_border_item"/>

    </LinearLayout>



</LinearLayout>