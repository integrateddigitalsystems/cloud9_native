<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_marginBottom="@dimen/small_margin"
        android:layout_marginStart="@dimen/margin_start_end"
        android:layout_marginEnd="@dimen/margin_start_end"
        android:background="@color/white"
        app:cardElevation="@dimen/small_margin_padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_margin="@dimen/big_margin_padding"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginStart="@dimen/normal_margin_padding"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.ids.cloud9.custom.CustomTextViewBold
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="@dimen/normal_font"
                android:id="@+id/tvProductName"
                android:layout_height="wrap_content"
                android:textColor="@color/medium_blue"/>

            <ImageView
                android:foreground="?android:attr/selectableItemBackground"
                android:padding="@dimen/small_margin_padding"
                android:id="@+id/btEditProduct"
                android:layout_marginEnd="@dimen/normal_margin_padding"
                android:tint="@color/gray_border_tab"
                android:layout_width="@dimen/height_toggle"
                android:layout_height="@dimen/height_toggle"
                android:src="@drawable/pen"/>

            <ImageView
                android:id="@+id/btClose"
                android:foreground="?android:attr/selectableItemBackground"
                android:padding="@dimen/small_margin_padding"
                android:layout_marginEnd="@dimen/small_margin_padding"
                android:tint="@color/gray_border_tab"
                android:layout_marginStart="@dimen/small_margin_padding"
                android:layout_width="@dimen/height_toggle"
                android:layout_height="@dimen/height_toggle"
                android:src="@drawable/close_x"/>
        </LinearLayout>


            <com.ids.cloud9.custom.CustomTextViewBold
                android:layout_marginStart="@dimen/normal_margin_padding"
                android:layout_marginEnd="@dimen/normal_margin_padding"

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:id="@+id/tvDesc"
                android:textColor="@color/otw_text"
                android:textSize="@dimen/normal_font" />

        <LinearLayout
            android:layout_marginTop="@dimen/normal_margin_padding"
            android:layout_marginStart="@dimen/normal_margin_padding"
            android:layout_marginEnd="@dimen/normal_margin_padding"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.ids.cloud9.custom.CustomTextViewBold
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="@string/unit"
                android:textColor="@color/otw_text"
                android:textSize="@dimen/normal_font" />

            <com.ids.cloud9.custom.CustomTextViewMedium
                android:layout_weight="1"
                android:layout_marginStart="@dimen/small_margin_padding"
                android:textColor="@color/otw_text"
                android:textSize="@dimen/normal_font"
                android:id="@+id/tvUnit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text=""/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/normal_margin_padding"
            android:layout_marginStart="@dimen/normal_margin_padding"
            android:layout_marginEnd="@dimen/normal_margin_padding"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.ids.cloud9.custom.CustomTextViewBold
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="@string/sn"
                android:textColor="@color/otw_text"
                android:textSize="@dimen/normal_font" />

            <com.ids.cloud9.custom.CustomTextViewMedium
                android:textColor="@color/otw_text"
                android:textSize="@dimen/normal_font"
                android:id="@+id/tvSN"
                android:layout_marginStart="@dimen/small_margin_padding"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text=""/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/normal_margin_padding"
            android:layout_marginStart="@dimen/normal_margin_padding"
            android:layout_marginEnd="@dimen/normal_margin_padding"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.ids.cloud9.custom.CustomTextViewBold
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="@string/quantity"
                android:textColor="@color/otw_text"
                android:textSize="@dimen/normal_font" />

            <com.ids.cloud9.custom.CustomTextViewMedium
                android:layout_weight="1"
                android:textColor="@color/otw_text"
                android:textSize="@dimen/normal_font"
                android:layout_marginStart="@dimen/small_margin_padding"
                android:layout_width="match_parent"
                android:id="@+id/tvQuantity"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text=""/>

        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/normal_margin_padding"
                android:layout_marginBottom="@dimen/small_margin_padding"
                android:gravity="center_vertical">

                <RelativeLayout
                    android:id="@+id/llJobReport"
                    android:layout_marginEnd="@dimen/bigger_margin_padding"
                    android:background="@drawable/light_rounded_border"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_40"
                    android:layout_weight="1">

                    <com.ids.cloud9.custom.CustomTextViewMedium
                        android:id="@+id/tvReport"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/normal_margin_padding"
                        android:gravity="center_vertical"
                        android:text=""
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/normal_font" />

                    <Spinner
                        android:id="@+id/spReports"
                        android:dropDownVerticalOffset="@dimen/big_margin"
                        android:popupBackground="@drawable/white_light_rounded"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/transparent"/>


                    <ImageView
                        android:id="@+id/ivArrowSpin"
                        android:layout_width="@dimen/radius_10"
                        android:layout_height="@dimen/radius_10"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/settings_item_height"
                        android:rotation="90"
                        android:src="@drawable/arrow_submit"
                        />




                </RelativeLayout>


                <ImageView
                    android:id="@+id/ivReport"
                    android:foreground="?attr/selectableItemBackground"
                    android:padding="@dimen/small_margin_padding"
                    android:layout_width="@dimen/height_toggle"
                    android:layout_height="@dimen/height_toggle"
                    android:tint="@color/gray_tint"
                    android:layout_marginEnd="@dimen/normal_margin_padding"
                    android:src="@drawable/share_square" />


                <ImageView
                    android:layout_marginStart="@dimen/small_margin_padding"
                    android:layout_marginEnd="@dimen/small_margin_padding"
                    android:padding="@dimen/small_margin_padding"
                    android:id="@+id/btRecords"
                    android:tint="@color/colorAccent"
                    android:layout_width="@dimen/height_toggle"
                    android:layout_height="@dimen/height_toggle"
                    android:src="@drawable/list" />
            </LinearLayout>


        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>